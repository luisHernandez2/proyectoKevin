.slideMain
	.slide_list
		.slide_item
			position relative
			background-size cover
			background-repeat no-repeat		
			background-position 50%
			&:before
					position absolute
					content ""
					width 100%
					height 100%
					top 0
					left 0
					background-image url('../img/grid-suave.png')
			.contenidoSlide
				position absolute
				top 50%
				left 0%
				width 100%
				max-width 300px
				transform translateY(-50%)
				text-align center
				.titulo_slide
					h2
					p 
						font-size 18px
						color violeta
						margin auto
						font-family: 'Lato', sans-serif;
						span
							font-weight bold
				.btnCallAction
					color #fff
					font-weight bold
					background btnCallAction
@media (min-width:768px)
	.slideMain
		.slide_list
			.slide_item
				.contenidoSlide
					max-width 500px
					h2
					p
						font-size 35px
@media (min-width:992px)
	.slideMain
		.slide_list
			.slide_item
				.contenidoSlide
					max-width 700px
					.titulo_slide
						h2
						p
							font-size 42px
							/*NAVEGACION DE SERVICIO*/
.slideTab_list
	position relative
	.slideTab_item
		float left
		height 50px
		width 25% 
		.slideTab_link
			position relative
			color #fff
			display block
			height 50px
			line-height 50px
			overflow hidden
			&:before
				position absolute
				top 0
				left 0
				z-index -1
				width 100%
				height 100%
				background #fff
				color plomo_oscuro_letra
				content attr(data-hover)
				transform translateX(-25%)
				transition transform 0.5s
			.icoBox
				display block
				height 50px
				line-height 50px
				background pink
				transition transform 0.5s
			&:hover
			&:active
				&:before
					transform translateX(0%)
				.icoBox
					transform translateX(100%)
		&:first-child
			.icoBox
				background violeta
		&:nth-child(2)
			.icoBox
				background naranja
		&:last-child
			.icoBox
				background amarillo
.slideTab_active
	&:before
		transform translateX(0%) !important
	.icoBox
		transform translateX(100%)